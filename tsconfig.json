{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "App/*"
      ],
      "@components/*": [
        "App/components/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@screens/*": [
        "App/screens/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
